{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "avatar": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "surname": {
      "type": "string"
    },
    "dateOfBirth": {
      "type": "date"
    },
    "gender": {
      "type": "string"
    },
    "role": {
      "type": "string"
    },
    "editorConfig": {
      "type": "object",
      "default": {
        "theme": "chaos",
        "softTabs": "true",
        "tabSize": "4",
        "fontSize": "12"
      }
    }
  },
  "validations": [],
  "relations": {
    "company": {
      "type": "belongsTo",
      "model": "Company",
      "foreignKey": "companyId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "Owner",
      "permission": "DENY",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "signUp"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "changePassword"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "changePersonalData"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "deleteUser"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "changeRole"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__company"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "getEditorConfig"
    },
    {
      "principalType": "ROLE",
      "principalId": "Owner",
      "permission": "ALLOW",
      "property": "invite"
    },
    {
      "principalType": "ROLE",
      "principalId": "Administrator",
      "permission": "ALLOW",
      "property": "invite"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "changeEditorConfig"
    }
  ],
  "methods": {}
}
